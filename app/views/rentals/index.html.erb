<h1>物件一覧</h1>
<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  </tr>
  <% @rentals.each do |rental|%>
    <tr>
      <td><%= rental.name %></td>
      <td><%= rental.price %>円</td>
      <td><%= rental.address %></td>
      <td><%= rental.years %>年</td>
      <td><%= rental.note %></td>
      <td><%= link_to "詳細", rental_path(rental) %></td>
      <td><%= link_to "編集", edit_rental_path(rental) %></td>
      <td><%= link_to "削除", rental_path(rental),method: :delete %></td>
    </tr>
  <% end %>
</table>
<%= link_to "物件を登録する", new_rental_path %>
